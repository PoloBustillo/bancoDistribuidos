{
  "apps": [
    {
      "name": "coordinador",
      "cwd": "./coordinador",
      "script": "bun",
      "args": "run start",
      "env": {
        "PORT": "4000",
        "NODE_ENV": "production"
      },
      "instances": 1,
      "exec_mode": "fork",
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "500M",
      "error_file": "./logs/coordinador-error.log",
      "out_file": "./logs/coordinador-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true
    },
    {
      "name": "worker-3001",
