{
  "name": "worker",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "db:push": "bunx prisma db push",
    "db:studio": "bunx prisma studio",
    "prisma:generate": "bunx prisma generate --schema=prisma/schema.prisma",
    "prisma:migrate:dev": "bunx prisma migrate dev --schema=prisma/schema.prisma",
    "prisma:migrate:deploy": "bunx prisma migrate deploy --schema=prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^11.0.0",
    "prisma": "^6.19.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  }
}